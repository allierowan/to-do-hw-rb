<table class="table">
  <thead>
    <tr>
      <th>
        Complete
      </th>
      <th>
        To Do
      </th>
      <th>
        Created
      </th>
      <th>
        Due Date
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <% if @todo.is_complete %>
        <span class="complete">Completed on <%= @todo.completed_at.strftime "%A, %d %b %Y %l:%M %p" %></span>
        <% else %>
        <form action="/list/active/todos/<%= @todo.id %>" method="post">
          <input type="hidden" name="_method" value="patch">
          <input type="hidden" name="todo[is_complete]" value="<%= true %>">
          <input type="hidden" name="list[name]" value="<%= @todo.list.name %>">
          <input type="hidden" name="all" value="<%= @all %>">
          <input type="submit" value="   " onfocus="this.value='âœ”'" class="checkbox">
        </form>
        <% end %>
      </td>
      <td>
        <a href="/list/todos/<%= @todo.id %>/update"><%= @todo.description %></a>
      </td>
      <td>
        <%= @todo.created_at.strftime "%A, %d %b %Y %l:%M %p" if @todo.created_at %>
      </td>
      <td>
        <%= @todo.due_at.strftime "%A, %d %b %Y" if @todo.due_at %>
      </td>
    </tr>
  </tbody>
</table>
